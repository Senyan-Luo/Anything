  <div id='article-section' class="masonry">
    {{#each articles}}
    <div class="item">
      <div class="container"><div class='row justify-content-between'>
        <div class='col'><h6 id="date{{@index}}" class="datetext">{{this.publishedAt}} </h6></div>
        <div class='col'><button class="save-btn linkbutton" id="btn{{@index}}" type="button" data-toggle="collapse"
          data-target="#collapseExample{{@index}}" aria-expanded="false" aria-controls="collapseExample"> Save Article
        </button></div>
      </div>
      </div>
      
      
      <h5 id="title{{@index}}" class="titletext"> {{this.title}} </h5>
      <p id="description{{@index}}" class="summarytext">{{this.description}}</p>
      <div align='center'>
      <button class="btn btn-primary article_url" id="url{{@index}}" type="button" data-toggle="collapse"
        data-target="#collapseExample{{@index}}" aria-expanded="false" aria-controls="collapseExample" style="margin-bottom: 1em;">
        Read Article
      </button></div>
      <div class="collapse" id="collapseExample{{@index}}">
        <p class='card' id="content{{@index}}"> {{this.content}} </p>
        <p class='card' id="translate{{@index}}"></p>
        <p id="urltext{{@index}}">{{this.url}}</p> 
      </div>
    </div>
    {{/each}}
  </div>