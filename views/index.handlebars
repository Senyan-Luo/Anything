  <div id="test" class="on_Location">
    <button type="button" class="btn btn-secondary" onclick="on()">Change<br />Location</button>
  </div>


  <div id='article-section' class="masonry" style="margin:1em 4em 1em 6.5em;">
    {{#each articles}}
    <div class="item">
      <div class="container topbar"><div class='row justify-content-between'>
        <div class='col'><h6 id="date{{@index}}" class="datetext">{{this.publishedAt}} </h6></div>
        <div class='col'><button class="save-btn linkbutton" id="btn{{@index}}" type="button" data-toggle="collapse"
          data-target="#collapseExample{{@index}}" aria-expanded="false" aria-controls="collapseExample"> Save Article
        </button></div>
      </div>
      </div>
      
      
      <h5 id="title{{@index}}" class="titletext"> {{this.title}} </h5>
      <p id="description{{@index}}" class="summarytext">{{this.description}}</p>
      <div align='center'>
      <button class="article_url readbutton" id="url{{@index}}" type="button" data-toggle="collapse"
        data-target="#collapseExample{{@index}}" aria-expanded="false" aria-controls="collapseExample" style="margin-bottom: 1em;">
        Read Article
      </button></div>
      <div class="collapse" id="collapseExample{{@index}}">
        <p class='card topBorder' id="content{{@index}}"> {{this.content}} </p>
        <p class='card collapseBorder' id="translate{{@index}}"></p>
        <a class ='collapseBorder'id="urltext{{@index}}" href= "{{this.url}}" target="_blank">{{this.url}}</a> 
      </div>
    </div>
    {{/each}}
  </div>
