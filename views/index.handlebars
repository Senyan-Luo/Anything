<div class=" modal fade" id="dictModal" tabindex="-1" role="dialog" aria-labelledby="dictModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="dictModalLabel"></h5>
            </div>
            <div class="modal-body">

            </div>
            <div id="added_vocab" class="invisible alert alert-primary">New word successfully added to your <a
                href='/vocabulary'>VocabBuilder</a> </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" id="saveVocab">Add to VocabBuilder</button>
              <button type="button" id="reset-button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
  </div>


  <div id="overlay" onclick="off()">
    <div id="text">
      <a id='asia' href='/news/asia' class='btn btn-primary continent-button'>Asia Pacific</a>
